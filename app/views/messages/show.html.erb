<h2><%=@message.title %><br></h2>
<p>Posted By : <%=@message.user.email %> <%=time_ago_in_words(@message.created_at)%>ago</p>

<strong>Description:</strong> <%=@message.description %><br>

<br>
<h3>Comments</h3>
<%= render @message.comments%>

<h2>Reply To Messages: </h2>
<%= render "comments/form"%><br>

<%= link_to "Back",root_path%>
<% if user_signed_in? %>
    <% if @message.user_id == current_user.id %>
        <%= link_to "Edit", edit_message_path(@message) %>
        <%= button_to "Delete",message_path(@message), method: :delete, data: { confirm:"Are you Sure?" } %>
    <% end %>
<% end %>