<div class = "col-md-8 col-md-offset-2">
  <div class= "message-show">
    <h2><%=@message.title %><br></h2>
    <p class="message-posted-by">Posted By : <%=@message.user.email %> <%=time_ago_in_words(@message.created_at)%>ago</p>

    <p classs= "message-desc"><%=@message.description %></p>

    <br>
    <h3>Comments</h3>
    <%= render @message.comments%>

    <h2 class= "reply-to-msg">Reply To Messages: </h2>
    <%= render "comments/form"%><br>
    <div class= "link btn-group">
      <%= link_to "Back",root_path, class: "btn btn-default"%>
      <% if user_signed_in? %>
        <% if @message.user_id == current_user.id %>
          <%= link_to "Edit", edit_message_path(@message), class: "btn btn-default"%>
          <%= button_to "Delete",message_path(@message), method: :delete, data: { confirm:"Are you Sure?" }, class: "btn btn-default" %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>